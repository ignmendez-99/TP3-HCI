<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/stop_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF7F7F"
        android:text="@string/stop_string"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout3"
        app:layout_constraintStart_toStartOf="@+id/linearLayout3"
        app:layout_constraintTop_toTopOf="@+id/linearLayout3" />

    <Switch
        android:id="@+id/faucet_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/textView24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView24" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="@string/open_string"
        app:layout_constraintBottom_toBottomOf="@+id/faucet_switch"
        app:layout_constraintStart_toEndOf="@+id/faucet_switch"
        app:layout_constraintTop_toTopOf="@+id/faucet_switch" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/dispense_exact_amount_button"
        app:layout_constraintStart_toStartOf="@+id/dispense_exact_amount_button"
        app:layout_constraintTop_toTopOf="@+id/dispense_exact_amount_button">

        <EditText
            android:id="@+id/amount"
            android:layout_width="104dp"
            android:layout_height="48dp"
            android:layout_marginEnd="28dp"
            android:autofillHints="@string/amount_hint_string"
            android:ems="10"
            android:inputType="number" />

        <Spinner
            android:id="@+id/unit_spinner"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="24dp"
            android:layout_weight="1"
            android:background="#F3F3F3"
            android:entries="@array/units" />

        <Button
            android:id="@+id/start_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_string" />

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancel_string" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="24dp"
        android:text="@string/close_string"
        app:layout_constraintEnd_toStartOf="@+id/faucet_switch"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/dispense_exact_amount_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/dispense_exact_amount_string"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/faucet_switch" />
</androidx.constraintlayout.widget.ConstraintLayout>