<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/currentLevel_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="39dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/current_level_string2"
        app:layout_constraintEnd_toEndOf="@+id/level_blinds_seekBar"
        app:layout_constraintStart_toEndOf="@+id/current_level_string2"
        app:layout_constraintTop_toTopOf="@+id/current_level_string2" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/close_blinds_button"
        app:layout_constraintTop_toBottomOf="@+id/close_blinds_button">

        <TextView
            android:id="@+id/status_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/status_placeholder"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <ProgressBar
            android:id="@+id/loading_progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/max_level_string2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"
        android:text="@string/max_level_string"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/level_blinds_seekBar"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/max_level"
        app:layout_constraintEnd_toStartOf="@+id/open_blinds_button"
        app:layout_constraintStart_toEndOf="@+id/max_level"
        app:layout_constraintTop_toTopOf="@+id/max_level" />

    <TextView
        android:id="@+id/current_level_string2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/current_level_string"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="@+id/max_level_string2"
        app:layout_constraintTop_toBottomOf="@+id/max_level_string2" />

    <TextView
        android:id="@+id/max_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/max_level_placeholder"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toEndOf="@+id/max_level_string2"
        app:layout_constraintTop_toTopOf="@+id/max_level_string2" />

    <Button
        android:id="@+id/open_blinds_button"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="@string/open_completely_string"
        app:layout_constraintEnd_toStartOf="@+id/close_blinds_button"
        app:layout_constraintTop_toTopOf="@+id/close_blinds_button" />

    <Button
        android:id="@+id/close_blinds_button"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:layout_marginEnd="24dp"
        android:text="@string/close_completely_string"
        app:layout_constraintBottom_toBottomOf="@+id/level_blinds_seekBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/level_blinds_seekBar" />

</androidx.constraintlayout.widget.ConstraintLayout>